<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Head2 Menu1 -->
    <style name="Head2Menu1">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#FF3760FF</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Head2Menu1_Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="Head2Menu1_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Head2Menu1_SplitArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:paddingLeft">-2dp</item>
        <item name="android:paddingRight">-2dp</item>
    </style>

    <!-- Head2 Pulldown -->
    <style name="Pulldown">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#3760FF</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="Pulldown_Scroll">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#3760FF</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Pulldown_Scroll_Column">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Pulldown_ItemText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Pulldown_SplitLinear">
        <item name="android:layout_width">8.5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/head2_repeat_split</item>
    </style>

</resources>
