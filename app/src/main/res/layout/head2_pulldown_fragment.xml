<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        style="@style/Pulldown"
        android:id="@+id/head2_pulldown_menu">


        <ScrollView style="@style/Pulldown_Scroll">

            <LinearLayout style="@style/Pulldown_Scroll_Column">

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="学前" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="小学" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="小升初" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="初中" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="中考" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="高中" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="高考" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="艺术" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="体育" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout style="@style/Pulldown_SplitLinear" />

        <ScrollView style="@style/Pulldown_Scroll">

            <LinearLayout style="@style/Pulldown_Scroll_Column">

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="语文" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="数学" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="英语" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout style="@style/Pulldown_SplitLinear" />

        <ScrollView style="@style/Pulldown_Scroll">

            <LinearLayout style="@style/Pulldown_Scroll_Column">

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="上午" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="下午" />

                <TextView
                    style="@style/Pulldown_ItemText"
                    android:text="晚上" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</LinearLayout>
