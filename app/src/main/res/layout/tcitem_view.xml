<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tcitem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/tcitem_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:adjustViewBounds="true"
            android:background="#ffc3c3c3"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:focusable="false"
            android:nestedScrollingEnabled="false"></ImageView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            >

            <TableRow
                android:layout_marginTop="-1sp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tcitem_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="0.9"
                    android:maxHeight="50dp"
                    android:text="简要介绍..."
                    android:textSize="15dp"
                    />
            </TableRow>

            <TableRow
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="11sp"
                        android:layout_marginRight="1sp"
                        android:layout_marginTop="4sp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/hdpi_resveration"></ImageView>

                    <TextView
                        android:id="@+id/tcitem_text_reservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40sp"
                        android:layout_marginTop="5sp"
                        android:text="预约：12+人"
                        android:textIsSelectable="false"
                        android:textSize="8dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="11sp"
                        android:layout_marginRight="1sp"
                        android:layout_marginTop="4sp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/hdpi_start"></ImageView>

                    <TextView
                        android:id="@+id/tcitem_text_registed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40sp"
                        android:layout_marginTop="5sp"
                        android:text="报名：12+人"
                        android:textSize="8dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="11sp"
                        android:layout_marginRight="1sp"
                        android:layout_marginTop="4sp"

                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/hdpi_info"
                        ></ImageView>

                    <TextView
                        android:id="@+id/tcitem_text_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="评论(99+)"
                        android:textSize="8dp"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="11sp"
                        android:layout_marginRight="1sp"
                        android:layout_marginTop="4sp"
                        android:adjustViewBounds="true"
                        android:baselineAlignBottom="false"
                        android:clickable="false"
                        android:focusable="false"
                        android:nestedScrollingEnabled="false"
                        android:src="@drawable/hdpi_position"></ImageView>

                    <TextView
                        android:id="@+id/tcitem_text_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:text="距离：12 Km"
                        android:textSize="8dp"/>


                </LinearLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#ffaaaaaa"
        />

</LinearLayout>
